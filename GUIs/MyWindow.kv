#:kivy 2.1.0

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Window>:
    # ball is defined as property of the Window in python code
    # Define this first
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        # size: self.texture_size
        # background_color: 1, 0, 1, 1
        center_x: root.width / 4
        top: root.top - 50
        # text: "0"
        text: str(root.player1.score)

    Label:
        font_size: 70
        # background_color: 0.5, 0, 0.5, 0.5
        center_x: root.width * 3 / 4
        top: root.top - 50
        # text: "0"
        text: str(root.player2.score)

    PongBall:
        id: pong_ball # create link to ball
        color: 0.5, 0.5, 0, 0.5
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y + 50
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y - 50
